<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="home">
        <pattern value="/" />
        <view-id value="/views/index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/views/login.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register" />
        <view-id value="/views/register.xhtml" />
    </url-mapping>

    <url-mapping id="schedule">
        <pattern value="/schedule" />
        <view-id value="/views/schedule.xhtml" />
    </url-mapping>

    <url-mapping id="document-details">
        <pattern value="/details/#{id}" />
        <view-id value="/views/details.xhtml" />
    </url-mapping>

    <url-mapping id="document-print">
        <pattern value="/print/#{id}" />
        <view-id value="/views/print.xhtml" />
    </url-mapping>

</pretty-config>